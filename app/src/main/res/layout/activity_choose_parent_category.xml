<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseParentCategory">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/btnBackInChooseParent"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn danh mục cha"
                android:layout_toRightOf="@+id/btnBackInChooseParent"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/txtNotChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:paddingLeft="63dp"
        android:text="(Không chọn)"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="64dp"
        app:layout_constraintTop_toBottomOf="@id/txtNotChoose"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvCategoryNotChild"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2" />
    <ProgressBar
        android:id="@+id/progressBarInChooseParent"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:paddingTop="30dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/rcvCategoryNotChild"
        app:layout_constraintStart_toStartOf="@id/rcvCategoryNotChild"
        app:layout_constraintEnd_toEndOf="@id/rcvCategoryNotChild"
        app:layout_constraintBottom_toBottomOf="@id/rcvCategoryNotChild"
        app:layout_constraintVertical_bias="0.5"
        />
</androidx.constraintlayout.widget.ConstraintLayout>