<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/relativeInOutcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="6dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgCategoryInOutcome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/home"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txtNameCategoryInOutcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sách vở"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/imgCategoryInOutcome"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/imgCategoryInOutcome"
            android:layout_toRightOf="@+id/imgCategoryInOutcome"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>