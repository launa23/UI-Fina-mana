<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/relativeInOutcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/rectangle"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgCategoryInOutcome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/books"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/imageView"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txtNameCategoryInOutcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sách vở"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/imgCategoryInOutcome"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/imageView"
            android:layout_toRightOf="@+id/imgCategoryInOutcome"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeInOutcome" />
</androidx.constraintlayout.widget.ConstraintLayout>